<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_property_offers">
        <t t-foreach="docs" t-as="property">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="col-md-6">
                            <header>
                                <table class="table">
                                    <tbody>
                                        <t>
                                            <span t-field="property.company_id"/><br/>
                                        </t>
                                        <t>
                                            <span t-field="property.company_id.street"/>
                                            <span t-field="property.company_id.street2"/><br/>
                                        </t>
                                        <t>
                                            <span t-field="property.company_id.city"/>
                                            <span t-field="property.company_id.state_id"/>
                                            <span t-field="property.company_id.zip"/><br/>
                                        </t>
                                        <t>
                                            <span t-field="property.company_id.country_id"/>
                                        </t>
                                    </tbody>
                                </table>
                            </header>
                        </div>
                        <h2>
                            <span t-field="property.name"/>
                        </h2>
                        <div>
                            <strong>Expected Price: </strong>
                            <span t-field="property.expected_price"/>
                        </div>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Price</th>
                                    <th>Partner</th>
                                    <th>Validity (days)</th>
                                    <th>Deadline</th>
                                    <th>State</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="offers" t-value="property.mapped('offer_ids')"/>
                                <tr t-foreach="offers" t-as="offer">
                                    <td>
                                        <span t-field="offer.price"/>
                                    </td>
                                    <td>
                                        <span t-field="offer.partner_id"/>
                                    </td>
                                    <td>
                                        <span t-field="offer.validity"/>
                                    </td>
                                    <td>
                                        <span t-field="offer.deadline"/>
                                    </td>
                                    <td>
                                        <span t-field="offer.offer_status"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>